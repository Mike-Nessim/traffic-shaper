# Traffic Shaper Server Configuration
# Copy this file to .env and modify as needed

# Server settings
HOST=0.0.0.0
PORT=8000

# Traffic shaping limits
MAX_DELAY_MS=10000
MAX_BANDWIDTH_MBPS=1000.0
MIN_BANDWIDTH_MBPS=0.1

# Default interface names (optional)
DEFAULT_INTERFACE_IN=eth0
DEFAULT_INTERFACE_OUT=eth1

# Security settings
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# System requirements
REQUIRE_ROOT=true 